<root-logger>
  <level>debug</level>
  <appenders>
	<appender>debug-window</appender>
	<appender>file</appender>
  </appenders>
</root-logger>
<loggers>
  <logger>
    <id>COCONUT.PULP.RENDERER.SHADER.PASS_FACTORY</id>
    <level>debug</level>
  </logger>
</loggers>
<appenders>
  <appender>
    <id>debug-window</id>
    <level>trace</level>
    <type>coconut_tools::logger::appender::DebugWindowAppender</type>
    <layout>basic</layout>
  </appender>
  <appender>
    <id>file</id>
    <level>trace</level>
    <type>coconut_tools::logger::appender::FileAppender</type>
    <layout>basic</layout>
	<log-file>log</log-file>
  </appender>
</appenders>
<layouts>
  <layout>
    <id>basic</id>
    <type>coconut_tools::logger::layout::BasicLayout</type>
  </layout>
  <layout>
    <id>detailed</id>
    <type>coconut_tools::logger::layout::DetailedLayout</type>
    <configuration>
      <time-precision>milliseconds</time-precision>
    </configuration>
  </layout>
</layouts>
<log-files>
  <log-file>
    <id>log</id>
    <path>coconut.log</path>
    <overwrite>1</overwrite>
  </log-file>
</log-files>
