<root-logger>
  <level>info</level>
  <appenders>
	<appender>debug-window</appender>
  </appenders>
</root-logger>
<loggers>
  <logger>
    <id>COCONUT.PULP.RENDERER.SHADER</id>
	<level>debug</level>
  </logger>
</loggers>
<appenders>
  <appender>
    <id>debug-window</id>
    <level>trace</level>
    <type>coconut_tools::logger::appender::DebugWindowAppender</type>
    <layout>basic</layout>
  </appender>
</appenders>
<layouts>
  <layout>
    <id>basic</id>
    <type>coconut_tools::logger::layout::BasicLayout</type>
  </layout>
  <layout>
    <id>detailed</id>
    <type>coconut_tools::logger::layout::DetailedLayout</type>
    <configuration>
      <time-precision>milliseconds</time-precision>
    </configuration>
  </layout>
</layouts>
